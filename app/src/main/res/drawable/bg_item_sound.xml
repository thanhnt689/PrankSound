<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5871A" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:end="1dp"
        android:start="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>